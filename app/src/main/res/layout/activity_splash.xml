<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity"
    android:gravity="center"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_vector"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/cerclebackroundtransparentwhite"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:text="OM\nAuto" >

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:textSize="30sp"
            android:orientation="vertical"
            android:background="@drawable/cerclebackroundwhite"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textAlignment="center">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/cardiogram" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Fit"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_light"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp" />

    </RelativeLayout>

</RelativeLayout>